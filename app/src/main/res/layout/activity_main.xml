<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/busquedaVehiculo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="12dp"
        android:background="@drawable/green_border"
        android:hint="Buscar Vehiculo"
        android:textSize="20sp"
        android:textColor="@color/green"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:padding="12dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/busquedaVehiculo"
        app:layout_constraintStart_toStartOf="@id/busquedaVehiculo"
        app:layout_constraintEnd_toEndOf="@id/busquedaVehiculo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/green_border"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/btnBuscar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/OwnerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Owner Name"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:textSize="18sp"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/readOwnerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="viewEnd"
            android:textColor="@color/green"
            android:textSize="18sp"
            android:padding="8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/green"
            android:alpha="0.5"/>

        <TextView
            android:id="@+id/vehiculobrand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vehiculo Brand"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:textSize="18sp"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/readvehiculobrand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="viewEnd"
            android:textColor="@color/green"
            android:textSize="18sp"
            android:padding="8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/green"
            android:alpha="0.5"/>

        <TextView
            android:id="@+id/vehiculoRTO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vehiculo RTO"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:textSize="18sp"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/readvehiculoRTO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="viewEnd"
            android:textColor="@color/green"
            android:textSize="18sp"
            android:padding="8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/green"
            android:alpha="0.5"/>

        <TextView
            android:id="@+id/vehiculoPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vehiculo Precio"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:textSize="18sp"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/readvehiculoPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="viewEnd"
            android:textColor="@color/green"
            android:textSize="18sp"
            android:padding="8dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
